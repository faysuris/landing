            />
            <p>More information - click here</p>
          </a>
          <a
            href="https://wa.me/59995277230?text=Hi%21%20I%27m%20interested%20in%20Staleks%20tools.%20Could%20you%20share%20more%20information%20Thanks."
            target="_blank"
            rel="noreferrer"
            class="flex justify-center items-center flex-col border border-red-400 rounded-lg p-4"
          >
            <img
              src={staleksLogo.src}
              alt="Staleks - Herramientas profesionales para manicure"
              class="w-[250px] h-[150px] object-contain opacity-60 hover:opacity-100 focus:opacity-100 transition-all duration-300"
              loading="lazy"
              decoding="async"
            />
            <p>More information - click here</p>
          </a>
          <a
            href="https://wa.me/59995277230?text=Hi%21%20I%27m%20interested%20in%20Arobell%20products.%20Could%20you%20share%20more%20information%20Thanks."
            target="_blank"
            rel="noreferrer"
            class="flex justify-center items-center flex-col border border-emerald-400 rounded-lg p-4"
          >
            <img
              src={arobellLogo.src}
              alt="Arobell - Productos profesionales para uÃ±as"
              class="w-[250px] h-[150px] object-contain opacity-60 hover:opacity-100 focus:opacity-100 transition-all duration-300"
              loading="lazy"
              decoding="async"
            />
            <p>More information - click here</p>
          </a>
        </div>

        <div class="flex items-center justify-center">
          	<!-- <div class="border-slate-200 w-[1px] h-[24px]"></div> -->
			<span class="text-slate-900 font-semibold">OR</span>
			<!-- <div class="border-slate-200 w-[1px] h-[24px]"></div> -->
        </div>

        <a
          href="https://wa.me/59995277230"
          target="_blank"
