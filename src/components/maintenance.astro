---
import logo from "../assets/logo.png";
import background from "../assets/background.svg";
---

<div class="min-h-screen flex justify-center items-center">
  <img
    src={background.src}
    alt=""
    fetchpriority="high"
    class="fixed inset-0 w-full h-full -z-10 blur-[100px]"
  />
  <main>
    <section class="flex items-center flex-col justify-center p-4 text-center">
      <img src={logo.src} width="256" alt="Faysuris Homepage" />
      <h1 class="text-[22px] mt-2 max-w-[600px]">
        We're working hard to make our site better for you! We'll be back online
        soon. Thanks for your patience.
      </h1>
      <p class="text-slate-600 text-[18px] leading-7 my-4 max-w-[500px]">
        In the meantime, if you need anything or wish to place an order, please
        feel free to reach out.
      </p>
      <a
        href="https://links.faysuris.com"
        target="_blank"
        rel="noreferrer"
        class="contact-button"
      >
        Let's Talk
      </a>
    </section>
  </main>
</div>

<style>

  .contact-button {
    display: inline-block;
    padding: 12px 28px;
    color: black;
    text-decoration: none;
    font-weight: 600;
    font-size: 18px;
    transition: all 0.3s;
    background: linear-gradient(83.21deg, #f0c74e 0%, #d8a23d 100%);
    /* box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.4),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24),
			0 8px 16px rgba(0,0,0,0.3); */
    border-radius: 999px; /* Makes it a pill-shaped button */
  }

  .contact-button:hover {
    transform: translateY(-2px);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.4),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24),
      0 8px 16px rgba(0, 0, 0, 0.3);
  }
</style>
